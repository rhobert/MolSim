<?xml version="1.0"?>

<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://www5.in.tum.de/wiki/index.php/PSE_Molekulardynamik_WS12"
xsi:schemaLocation="http://www5.in.tum.de/wiki/index.php/PSE_Molekulardynamik_WS12 src/input/InputParameters.xsd">
	
	<outputPhaseSpace>phaseSpaceArgon.txt</outputPhaseSpace>
	
	<t_end>150</t_end>
	
	<delta_t>0.0005</delta_t>
	
	<potential>
		<smoothedLennardJones>
			<rl>1.9</rl>
		</smoothedLennardJones>
	</potential>
	
	<dimensionCount>3</dimensionCount>

	<domain>		
		<dimensions>
			<x>9.2</x>
			<y>9.2</y>
			<z>9.2</z>
		</dimensions>
		
		<x>
			<lower>reflecting</lower>
			<upper>reflecting</upper>
		</x>
		<y>
			<lower>reflecting</lower>
			<upper>reflecting</upper>
		</y>
		<z>
			<lower>reflecting</lower>
			<upper>reflecting</upper>
		</z>
		
		<cutoff>2.3</cutoff>	
	</domain>
	
	<thermostat>	
		<initialT>0.01</initialT>
		<frequency>80</frequency>
		<targetT>3</targetT>
		<deltaT>0.001</deltaT>
	</thermostat>
	
	<inputs>		
		<cuboid>			
			<position>
				<x>0.575</x>
				<y>0.575</y>
				<z>0.575</z>
			</position>
			
			<velocity>
				<x>0</x>
				<y>0</y>
				<z>0</z>
			</velocity>
			
			<dimensions>
				<x>8</x>
				<y>8</y>
				<z>8</z>
			</dimensions>
			
			<mass>1.0</mass>
			
			<distance>1.15</distance>

			<sigma>1.0</sigma>
			
			<epsilon>1.0</epsilon>
			
			<type>1</type>
		</cuboid>
		
	</inputs>
	
</simulation>
